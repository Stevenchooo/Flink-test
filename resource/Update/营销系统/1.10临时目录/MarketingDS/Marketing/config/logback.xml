<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration scan="true" scanPeriod="120 seconds" debug="false">
    <property name="loggerHome" value=".." />
	
    <appender name="CONSOLE_ERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      		<level>WARN</level>
	    </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="CONSOLE_NOR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <filter class="com.huawei.waf.core.config.log.NormalLogerFilter" />
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>${loggerHome}/logs/waf/waf-log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${loggerHome}/logs/waf/waf-log_%d{yyyyMMdd}_%i.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>50MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>   
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
	
    <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>${loggerHome}/logs/access/access-log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${loggerHome}/logs/access/access-log_%d{yyyyMMdd_HH}_%i.log</FileNamePattern>
            <MaxHistory>50</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>50MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>   
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
	
    <root>
        <level value="DEBUG" />
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE_ERR" />
        <appender-ref ref="CONSOLE_NOR" />
    </root>
    
    <logger name="com.huawei.waf" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE_ERR" />
        <appender-ref ref="CONSOLE_NOR" />
    </logger>
    
    <logger name="ACCESS" additivity="false">
        <level value="INFO" />
        <appender-ref ref="ACCESS_FILE" />
        <appender-ref ref="CONSOLE_NOR" />
    </logger>
</configuration>
